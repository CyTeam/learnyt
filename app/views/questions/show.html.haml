.contextual
  = show_contextual_for @question

%h1= t_title

#question.box
  %h2= @question.title

  %p.description<= @question.description
  %p.remarks<= @question.remarks

  %h2= t_model PossibleAnswer

  %ol#answers
    - for @possible_answer in @question.possible_answers
      %li.subbox{:class => @possible_answer.correctness}
        %h3= @possible_answer.answer.title
        %p.description<= @possible_answer.answer.description
