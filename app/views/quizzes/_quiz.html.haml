%li[quiz]
  - if current_user.role?(:teacher)
    = link_to quiz.title, quiz_path(quiz), {'data-href-container' => 'li'}
  - else
    = link_to quiz.title, new_quiz_quiz_response_path(quiz), {'data-href-container' => 'li'}
  %p.description<= truncate(quiz.description, :length => 100, :separator => ' ')
