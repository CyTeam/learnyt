= f.semantic_errors
= f.inputs do
  = f.input :email
  = f.input :password, :hint => !f.object.new_record?
  = f.input :password_confirmation
  = f.input :current_password, :required => true unless can?(:manage, User)
  = f.input :role_texts, :as => :select, :collection => Ability.roles_for_collection, :include_blank => false, :input_html => {:multiple => 'multiple'}, :required => true if can?(:manage, User)

= f.buttons do
  = f.commit_button t('devise.update')
